@page
@model Hephaestus_Project.Pages.Login.IndexModel
@{
    Layout = "";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <title>Black Armory</title>
    </head>
    <body id="login_body">
        <div id="logo_login_div">
            <img id="logo_login_zdj" src="~/pic/Logo.png" alt="Logo"/>
        </div>
        <div class="container border" style="padding:20px">
            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="credential.Login"></label>
                    </div>
                    <div class="col-5">
                    <input type="text" asp-for="credential.Login" class="form-control credential" placeholder="Login" />
                    </div>
                    <span class="text-danger" asp-validation-for="credential.Login"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="credential.Password"></label>
                    </div>
                    <div class="col-5">
                    <input type="password" asp-for="credential.Password" class="form-control credential" placeholder="Password" />
                    </div>
                    <span class="text-danger" asp-validation-for="credential.Password"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input id="login_button" type="submit" class="btn btn-primary" value="Login"/>
                    </div>
                    <div class="col-5">                
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>