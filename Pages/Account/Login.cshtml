@page
@model Hephaestus_Project.Pages.Login.IndexModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="credential.Login"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="credential.Login" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="credential.Login"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="credential.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="credential.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input id="login" type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">                
            </div>
        </div>
    </form>
</div>