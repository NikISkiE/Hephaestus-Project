@page
@model Hephaestus_Project.Pages.Account.IndexModel
@{
}
<div class="text-center">
    <h1 class="display-4">User Account</h1>
</div>
<a class="btn btn-primary btn-sm" href="/Users/Index">Back</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>LOGIN</th>
            <th>PASSWORD</th>
            <th>PERMISSION</th>
            <th>CREATED_AT</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.input.Id</td>
                <td>@Model.input.Login</td>
                <td>@Model.input.Password</td>
                <td>@switch(Model.input.PermLVL){
                    case "1":
                        <text>
                            User
                        </text>
                    break;
                    case "2":
                        <text>
                           Commander 
                        </text>
                    break;
                    case "3":
                        <text>
                            Quartermaster
                        </text>
                    break;
                    case "4":
                        <text>
                            Admin
                        </text>
                    break;

                }</td>
                <td>@Model.input.Created_At</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Account/Edit?id=@Model.input.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Account/Delete?id=@Model.input.Id">Delete</a>
                </td>
             </tr>       
    </tbody>
</table>