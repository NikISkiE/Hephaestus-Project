<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Black Armory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hephaestus_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="text-white navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div style="color:white;" class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/pic/LogoMin.png" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div style="color:white;"  class="text-white navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul style="color:white;" class="navbar-nav flex-grow-1">
                        <li style="color:white;" class="nav-item">
                            <a style="color:white;" class="nav-link" asp-area="" asp-page="/Users/Index">Users</a>
                        </li>
                        <li style="color:white;" class="nav-item">
                            <a style="color:white;" class="nav-link" asp-area="" asp-page="/MyEQ/Index">My Equipment</a>
                        </li>
                        <li class="nav-item text-white">
                            <a class="nav-link text-white" asp-area="" asp-page="/Division/Index">Inspect</a>
                        </li>
                    </ul>
                </div>
                <div class="mr-2">
                    <partial name="_LoginStatusPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>