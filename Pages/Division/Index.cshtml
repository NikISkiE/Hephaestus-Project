@page
@model Hephaestus_Project.Pages.Division.DivisionModel
@{
}
<div class="text-center">
    <h1 class="display-4">My Division</h1>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Division</th>
                <th>Rank</th>
            </tr>
         </thead>
        <tbody>
            @foreach (var item in Model.ListDivision)
            {
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Division</td>
                <td>@item.Rank</td>
                <td></td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Users/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Users/Delete?id=@item.Id">Delete</a>
                </td>
            }
        </tbody>
    </table>